{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultPalette": true
		},
		"typography": {
      "lineHeight": true,
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"slug": "system-fonts",
					"name": "System Fonts"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.75rem",
					"name": "Small"
				},
				{
					"slug": "normal",
					"size": "1rem",
					"name": "Normal"
				},
				{
					"slug": "medium",
					"size": "1.5rem",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "1.75rem",
					"name": "Large"
				},
				{
					"slug": "extra-large",
					"size": "2rem",
					"name": "Extra large"
				},
				{
					"slug": "huge",
					"size": "2.5rem",
					"name": "Huge"
				},
				{
					"slug": "gigantic",
					"size": "3rem",
					"name": "Gigantic"
				}
			]
		},
    "spacing": {
      "padding": true,
      "margin": true,
      "units": [ "px", "em", "rem", "%", "vh", "vw" ]
    },
    "layout": {
       "contentSize": "1000px",
       "wideSize": "1400px",
			 "fullSize": "100%"
    }
	},
	"styles": {
		"blocks": {
			"core/group": {
				"spacing": {
					"padding": {
						"top": "50px",
						"right": "15px",
						"bottom": "50px",
						"left": "15px"
					},
					"margin": {
						"top": "0",
						"right": "0",
						"bottom": "0",
						"left": "0"
					}
				}
			},
			"core/button": {
				"spacing": {
					"padding": {
						"top": "5px",
						"right": "10px",
						"bottom": "5px",
						"left": "10px"
					}
				},
				"border": {
					"radius": "0"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-fonts)",
					"fontWeight": "600",
					"fontSize": "var(--wp--preset--font-size--gigantic)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-fonts)",
			"lineHeight": 1.25,
			"fontSize": "16px"
		},
		"spacing": {
			"blockGap": "20px"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-fonts)",
					"fontWeight": "600",
					"fontSize": "var(--wp--preset--font-size--gigantic)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-fonts)",
					"fontSize": "var(--wp--preset--font-size--huge)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-fonts)",
					"fontSize": "var(--wp--preset--font-size--extra-large)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-fonts)",
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-fonts)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-fonts)",
					"fontWeight": "600",
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			}
		}
	}
}
